{
  "preset": "ts-jest",
  "testMatch": [
    "**/spec/hunspell/*-spec.ts"
  ],
  "globals": {
    "ts-jest": {
      "diagnostics": false
    }
  },
  "bail": true,
  "testEnvironment": "node",
  "moduleFileExtensions": [
    "js",
    "jsx",
    "json",
    "ts",
    "tsx"
  ],
  "testPathIgnorePatterns": [
    "/.tmp/"
  ]
}