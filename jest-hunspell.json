{
  "preset": "ts-jest",
  "testMatch": [
    "**/spec/hunspell/**/*-spec.ts"
  ],
  "bail": true,
  "testEnvironment": "node",
  "moduleFileExtensions": [
    "js",
    "jsx",
    "json",
    "ts",
    "tsx"
  ],
  "reporters": [
    "jest-spin-reporter"
  ],
  "testPathIgnorePatterns": [
    "/.tmp/"
  ]
}